<UserControl x:Class="PointOfSale.CustomizationScreens.CowpokeChiliCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="50,50,50,50">
            <CheckBox FontSize ="15" IsChecked="{Binding Path=Cheese}" Margin="0,0,0,30">Cheese</CheckBox>
            <CheckBox FontSize ="15" IsChecked="{Binding Path=GreenOnions}"  Margin="0,0,0,30">Green Onions</CheckBox>
            <CheckBox FontSize ="15" IsChecked="{Binding Path=SourCream}"  Margin="0,0,0,30">Sour Cream</CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
